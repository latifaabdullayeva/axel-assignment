{
  "compilerOptions": {
    "module": "commonjs",    
    "target": "es6",
    "sourceMap": false,
    "experimentalDecorators": true,
    "noImplicitUseStrict": true,
    "moduleResolution": "node",    
    "lib": [
      "esnext",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],          
  },
  "exclude": [
    "node_modules",
    "out",
    ".next"
  ]
}
